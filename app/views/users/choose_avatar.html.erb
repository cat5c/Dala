<link rel="stylesheet" href="choose_avatar.css">
 <header>
   <h5 id="profile">Profile</h5>
   <h5 id="logo">Dala</h5>
 </header>

 <h1>Choose Avatar</h1>

 <div class="avatar-form">
   <ul>
    <%= button_to users_asign_avatar_path(image: '') do %>
      <%= image_tag('/images/Adventurer1.png', alt: 'Adventurer1.png')%>
      <%= image_tag('/images/Adventurer2.png', alt: 'Adventurer2.png')%>
      <%= image_tag('/images/Scientist1.png', alt: 'Scientist1.png')%>
      <%= image_tag('/images/Scientist2.png', alt: 'Scientist2.png')%>
      <%= image_tag('/images/Poet1.png', alt: 'Poet1.png')%>
      <%= image_tag('/images/Poet2.png', alt: 'Poet2.png')%>
    <% end %>
 </ul>
</div>
